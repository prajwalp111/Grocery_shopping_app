<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
</head>
<body>
    <h1>Edit Item</h1>
    <form action="/products/<%= products._id %>?_method=PUT" method="POST">
        <label for="name">Enter the item</label>
        <input type="text" name="name" id="name" placeholder="Enter item name" value="<%= products.name %>">
        
        <label for="price">Enter amount</label>
        <input type="number" name="price" id="price" placeholder="Enter item price" value="<%= products.price %>">

        <label for="category">Choose</label>
        <select name="category" id="category">
             <% for (let category of categories) { %>
                <option value="<%= category %>" <%= products.category === category ? 'selected' : '' %>><%= category %></option>
            <% } %>
        </select>

        <button>Submit</button>
    </form>

    <a href="/products/<%= products._id %>">Cancel</a>
</body>
</html>
